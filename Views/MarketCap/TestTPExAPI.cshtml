@{
    ViewBag.Title = "測試上櫃 API";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="alert alert-info">
        <strong>說明：</strong>此頁面用於測試上櫃 API 的連線和資料格式
    </div>
    
    @if (ViewBag.TestResults != null)
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5>測試結果</h5>
            </div>
            <div class="card-body">
                <pre style="background-color: #f8f9fa; padding: 15px; border-radius: 5px; max-height: 600px; overflow-y: auto;">@string.Join("\n", ViewBag.TestResults as List<string>)</pre>
            </div>
        </div>
    }
    
    <div class="mt-3">
        <a href="@Url.Action("Index", "MarketCap")" class="btn btn-secondary">返回市值排行</a>
    </div>
</div>
