@model List<MvcWebCrawler.Models.MonthlyRevenue>

@{
    ViewBag.Title = "每月營收資料";
}

<h2>@ViewBag.Title</h2>

<div class="row mb-3">
    <div class="col-md-4">
        <form method="get" action="@Url.Action("Index", "Revenue")" class="form-inline">
            <label for="industry" class="mr-2">產業別：</label>
            <select name="industry" id="industry" class="form-control mr-2" onchange="this.form.submit()">
                <option value="">-- 全部產業 --</option>
                @if (ViewBag.Industries != null)
                {
                    foreach (var ind in ViewBag.Industries)
                    {
                        <option value="@ind" @(ViewBag.SelectedIndustry == ind ? "selected" : "")>@ind</option>
                    }
                }
            </select>
            <button type="submit" class="btn btn-primary">篩選</button>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.SelectedIndustry))
{
    <div class="alert alert-info">
        目前顯示：<strong>@ViewBag.SelectedIndustry</strong> 產業別的公司
        <a href="@Url.Action("Index", "Revenue")" class="btn btn-sm btn-secondary ml-2">清除篩選</a>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="revenueTable">
        <thead class="thead-dark">
            <tr>
                <th>我的最愛</th>
                <th>公司代號</th>
                <th>公司名稱</th>
                <th>產業別</th>
                <th>當月營收</th>
                <th>上月營收</th>
                <th>去年當月營收</th>
                <th>上月比較增減(%)</th>
                <th>去年同月增減(%)</th>
                <th>當月累計營收</th>
                <th>去年累計營收</th>
                <th>前期比較增減(%)</th>
                <th>備註</th>
            </tr>
        </thead>
        <tbody id="revenueTableBody">
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr data-company-id="@item.公司代號">
                        <td class="text-center">
                            <span class="favorite-star" data-company-id="@item.公司代號" style="cursor: pointer; font-size: 20px;">
                                ☆
                            </span>
                        </td>
                        <td>@item.公司代號</td>
                        <td>@item.公司名稱</td>
                        <td>@item.產業別</td>
                        <td class="text-right">@MvcWebCrawler.Controllers.RevenueController.FormatNumber(item.當月營收)</td>
                        <td class="text-right">@MvcWebCrawler.Controllers.RevenueController.FormatNumber(item.上月營收)</td>
                        <td class="text-right">@MvcWebCrawler.Controllers.RevenueController.FormatNumber(item.去年當月營收)</td>
                        <td class="text-right">@MvcWebCrawler.Controllers.RevenueController.FormatPercentage(item.上月比較增減)</td>
                        <td class="text-right">@MvcWebCrawler.Controllers.RevenueController.FormatPercentage(item.去年同月增減)</td>
                        <td class="text-right">@MvcWebCrawler.Controllers.RevenueController.FormatNumber(item.當月累計營收)</td>
                        <td class="text-right">@MvcWebCrawler.Controllers.RevenueController.FormatNumber(item.去年累計營收)</td>
                        <td class="text-right">@MvcWebCrawler.Controllers.RevenueController.FormatPercentage(item.前期比較增減)</td>
                        <td>@item.備註</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="13" class="text-center">沒有資料</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model != null && Model.Count > 0)
{
    <p class="text-muted">共 @Model.Count 筆資料</p>
}

@section scripts {
    <script>
        $(document).ready(function() {
            // 從 localStorage 取得收藏清單
            function getFavorites() {
                var favorites = localStorage.getItem('favoriteCompanies');
                return favorites ? JSON.parse(favorites) : [];
            }

            // 儲存收藏清單到 localStorage
            function saveFavorites(favorites) {
                localStorage.setItem('favoriteCompanies', JSON.stringify(favorites));
            }

            // 更新愛心顯示狀態
            function updateFavoriteStars() {
                var favorites = getFavorites();
                $('.favorite-star').each(function() {
                    var companyId = $(this).data('company-id');
                    if (favorites.indexOf(companyId) !== -1) {
                        $(this).text('★').css('color', '#FFD700');
                    } else {
                        $(this).text('☆').css('color', '#000');
                    }
                });
            }

            // 排序表格：收藏的在最上面
            function sortTableByFavorites() {
                var favorites = getFavorites();
                var tbody = $('#revenueTableBody');
                var rows = tbody.find('tr').toArray();

                rows.sort(function(a, b) {
                    var aId = $(a).data('company-id');
                    var bId = $(b).data('company-id');
                    var aIsFav = favorites.indexOf(aId) !== -1;
                    var bIsFav = favorites.indexOf(bId) !== -1;

                    if (aIsFav && !bIsFav) return -1;
                    if (!aIsFav && bIsFav) return 1;
                    return 0;
                });

                tbody.empty().append(rows);
            }

            // 點擊愛心事件
            $(document).on('click', '.favorite-star', function() {
                var companyId = $(this).data('company-id');
                var favorites = getFavorites();
                var index = favorites.indexOf(companyId);

                if (index === -1) {
                    // 加入收藏
                    favorites.push(companyId);
                } else {
                    // 移除收藏
                    favorites.splice(index, 1);
                }

                saveFavorites(favorites);
                updateFavoriteStars();
                sortTableByFavorites();
            });

            // 初始化：更新愛心狀態並排序
            updateFavoriteStars();
            sortTableByFavorites();
        });
    </script>

    <style>
        .favorite-star {
            transition: all 0.3s ease;
        }
        .favorite-star:hover {
            transform: scale(1.2);
        }
    </style>
}
